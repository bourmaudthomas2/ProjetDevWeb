<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Bébou Crypto{% endblock %}</title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

    {% block stylesheets %}{% endblock %}

    {% block javascripts %}{% endblock %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        .dark-mode {
            background-color: #12162b;
            color: white;

        }
        .dark-modebar {
            background-color:#0a0c17;
        }
        li {
            padding-left: 15px;
            padding-right: 15px;"
        }

    </style>
    <script>
        function myFunction() {
            var element = document.body;
            element.classList.toggle("dark-mode");
            var elements = document.getElementsByClassName('navbar navbar-default'); // get all elements.
            for(var i = 0; i < elements.length; i++){
                elements[i].classList.toggle("dark-modebar");
            }
        }
    </script>
    <script src="https://go-echarts.github.io/go-echarts-assets/assets/echarts.min.js"></script>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="../../cryptos">Bébou Crypto</a>
        </div>

        <div class="collapse navbar-collapse">

            <ul class="nav navbar-nav navbar-left">




                <a class="navbar-brand" href="../../cryptos">{% trans %} Liste {% endtrans %}</a>
                <a class="navbar-brand" href="../../cryptos/categorie/Cryptocurrency">{% trans %} Categories {% endtrans %}</a>
                {%  if app.user %}

                    <a class="navbar-brand" href="/user/fav/{{ app.user.id }}">{% trans %} Favories {% endtrans %}</a>

                {% endif %}


            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li style="padding-top:15px">
                    {%  if app.user %}

                        {% trans %} Bienvenue {% endtrans %} {{ app.user.username }}

                    {% endif %}
                </li>
                <li>
                    <div>
                        <a onclick="myFunction()" class="btn btn-default navbar-btn" >{% trans %} Mode Sombre {% endtrans %}</a>
                    </div>
                </li>
                <li>
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <div>
                                <a href="/admin" class="btn btn-default navbar-btn">Admin</a>
                            </div>
                        {% endif %}
                    {% endif %}
                <li/>
                <li>

                    <div>
                        {%  if app.user %}
                            <a href="/logout" class="btn btn-default navbar-btn">{% trans %} Déconnexion {% endtrans %}</a>
                        {% else %}
                            <a href="/login" class="btn btn-default navbar-btn">{% trans %} Connexion {% endtrans %}</a>
                        {% endif %}
                    </div>
                </li>

            </ul>
            <ul class="nav navbar-nav">
                {% for locale in locales %}
                    {%  if locale != app.request.locale %}
                        <li class="nav-item">
                            <a class="navbar-brand" href="{{ path('change_locale',{'locale':locale}) }}"><img src="{{ asset(locale~'.png') }}" width="4%"></a>

                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>


    </div>

</nav>

<div class="container">
    {% block body %}{% endblock %}
</div>
</body>
</html>
